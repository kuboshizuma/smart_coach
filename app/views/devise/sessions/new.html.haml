- content_for :head do
  = stylesheet_link_tag :form_application
.form-wrapper
  %h2.form-title ログイン
  .item-container
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'input-item'
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "off", class: 'input-item'
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "ログイン", class: 'form-btn'
    = render "devise/shared/links"
