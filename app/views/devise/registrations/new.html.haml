
- content_for :head do
  = stylesheet_link_tag :form_application
.form-wrapper
  %h2.form-title 新規登録
  .item-container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'input-item'
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上)
        %br/
        = f.password_field :password, autocomplete: "off", class: 'input-item'
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'input-item'
      .field.image-file
        = f.file_field :avatar
      .actions
        = f.submit "登録", class: 'form-btn'

    = render "devise/shared/links"
