- content_for :head do
  = stylesheet_link_tag :show_application
.show-wrapper
  / = image_tag @lesson.thumbnail, class: 'thumbnail-item'
  = image_tag "phone.png", class: 'thumbnail-item'
  .item-container
    %span.genre-btn
      = link_to "#{ @lesson.genre.name }", lessons_genre_path(@lesson.genre_id)
    %p.main-title #{ @lesson.title }
    .clearfix
      .sns-btns
        .facebook
        .twitter
        .line
      %ul.apply-info
        %li 申し込み期限: 2015/12/25
        %li 現在の受講者: 1人
        %li 今までの受講者: 190人

  .coach-content
    = image_tag @lesson.coach.avatar, size: "50x50", class: 'avatar-item'
    %p.coach-name #{ @lesson.coach.nickname }
    .triangle
    %p.coach-description
      宜しくお願いします！
  .lesson-content
    %p.main-title こんなことやります
    .description-content
      %p #{@lesson.description}"

  .lesson-info
    .sub-title
      %p レッスン情報
    %table.table-content
      %tr
        %td.table-title ジャンル
        %td= @lesson.genre.name
      %tr
        %td.table-title 日程
        %td= "#{ @lesson.start_day } ~ #{ @lesson.finish_day }"
      %tr
        %td.table-title コーチ
        %td= @lesson.coach.nickname

  .clearfix
    .apply-btn
      = link_to "受講する", new_students_room_path(lesson_id: @lesson.id)
