!!!
%html
  %head
    = csrf_meta_tags
    = stylesheet_link_tag    :application, media: :all
    = javascript_include_tag :application
    %meta{name: "viewport", content: "width=device-width"}

    - if (head = yield(:head)).present?
      = head

  %body
    = render 'layouts/header'
    .container
      = yield
    = render 'layouts/footer'
